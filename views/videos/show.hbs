<body background="/images/img9.jpg" style="background-size: cover;">

<div class="container-fluid">
  <div class="page-header">
    <h1>{{video.video_title}}</h1>
  </div>

  <div class="embed-responsive embed-responsive-16by9">
    {{{video.url}}}
  </div>

  <br>

  <div>
    <p>Artist: {{video.artist_name}}</p>
    <p>Genre: {{video.genre}}</p>
    <p>Language: {{video.language}}</p>
    <p>Trigger(s): {{video.triggers}}</p>
    <p>Date Uploaded: {{video.date}}</p>
    <p>Video Length: {{video.video_length_mins}} Minutes</p>
    <a href="/users/{{user.id}}/videos" class="btn btn-default">Back to All of {{user.username}}'s Videos</a>
  </div>

  <br>

  {{#if req.session.currentUser.id}}
  <div>
    <a href="/users/{{user.id}}/videos/{{video.id}}/edit" class="btn btn-default">Edit This Video</a>

      <form class="navbar-form" action="/users/{{user.id}}/videos/{{video.id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-default">Delete This Video :(</button>
      </form>    
  </div>
  {{/if}}

</div>

</body>